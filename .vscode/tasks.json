{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/amorphie.tag/amorphie.tag.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dapr-debug",
            "appId": "amorphie-tag",
            "appPort": 6101,
            "type": "dapr",
            "dependsOn": "build",
            "httpPort": 61010,
            "grpcPort": 51010,
            "componentsPath": "amorphie.tag/Components",
            "logLevel":"debug"

        },
        {
            "appId": "amorphie-tag",
            "label": "daprd-down",
            "type": "daprd-down"
        }
    ]
}